<main class="pa4 black-80">
  <%= form_with mode: @membership, class: "measure center" do |form| %>
    <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
      <legend class="f4 fw6 ph0 mh0 center">Sign Up</legend>

      <% flash.each do |_key, value| %>
        <div class="flex items-center justify-center pa4 bg-lightest-blue navy">
          <svg class="w1" data-icon="info" viewBox="0 0 32 32" style="fill:currentcolor">
            <title>info icon</title>
            <path d="M16 0 A16 16 0 0 1 16 32 A16 16 0 0 1 16 0 M19 15 L13 15 L13 26 L19 26 z M16 6 A3 3 0 0 0 16 12 A3 3 0 0 0 16 6"></path>
          </svg>
          <span class="lh-title ml3"><%= value %></span>
        </div>
      <% end %>

      <div class="mt3">
        <%= label :membership, :name, class: "db fw6 lh-copy f6" %>
        <%= form.text_field :name, required: true, class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
      </div>
      <div class="mv3">
        <%= label :membership, :email, class: "db fw6 lh-copy f6" %>
        <%= form.text_field :email, required: true, class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
      </div>
    </fieldset>
    <div class="">
      <%= form.submit value="Sign Up", class: "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib" %>
    </div>
  <% end %>
</main>
